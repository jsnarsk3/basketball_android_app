<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerSwapActivity">

    <TextView
        android:id="@+id/playerswaptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Choose 6 players"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="59dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/first_row_of_checkboxes"
        app:layout_constraintTop_toBottomOf="@id/playerswaptitle"
        android:layout_marginTop="50dp">

            <CheckBox
                android:id="@+id/player1_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player1_name"
                android:checked="true"
                android:layout_weight = "1"/>

            <CheckBox
                android:id="@+id/player2_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player2_name"
                android:checked="true"
                android:layout_weight = "1"/>

            <CheckBox
                android:id="@+id/player3_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player3_name"
                android:checked="true"
                android:layout_weight = "1"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/second_row_of_checkboxes"
        app:layout_constraintTop_toBottomOf="@id/first_row_of_checkboxes"
        android:layout_marginTop="125dp">

        <CheckBox
            android:id="@+id/player4_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/player4_name"
            android:layout_weight = "1"/>

        <CheckBox
            android:id="@+id/player5_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/player5_name"
            android:layout_weight = "1"/>

        <CheckBox
            android:id="@+id/player6_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/player6_name"
            android:layout_weight = "1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/third_row_of_checkboxes"
        app:layout_constraintTop_toBottomOf="@id/second_row_of_checkboxes"
        android:layout_marginTop="125dp">

        <CheckBox
            android:id="@+id/player7_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placehold_player_name"
            android:layout_weight = "1"/>

        <CheckBox
            android:id="@+id/player8_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placehold_player_name"
            android:layout_weight = "1"/>

        <CheckBox
            android:id="@+id/player9_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placehold_player_name"
            android:layout_weight = "1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/fourth_row_of_checkboxes"
        app:layout_constraintTop_toBottomOf="@id/third_row_of_checkboxes"
        android:layout_marginTop="125dp">

        <CheckBox
            android:id="@+id/player10_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placehold_player_name"
            android:layout_weight = "1"/>

        <CheckBox
            android:id="@+id/player11_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placehold_player_name"
            android:layout_weight = "1"/>

        <CheckBox
            android:id="@+id/player12_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placehold_player_name"
            android:layout_weight = "1"/>
    </LinearLayout>

    <Button
        android:id="@+id/add_new_player_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="270dp"
        android:gravity="center"
        android:text="Add New Player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fourth_row_of_checkboxes"/>


</androidx.constraintlayout.widget.ConstraintLayout>