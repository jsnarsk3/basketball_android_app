<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChosePlayerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/team1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="UIUC"
                android:textSize="40sp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/team2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Other"
                android:textSize="40sp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/score1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="60dp"
            android:text="45"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="-"
            android:textSize="36sp"
            />

        <TextView
            android:id="@+id/score2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="60dp"
            android:text="38"
            android:textSize="48sp" />
        <TextView
            android:id="@+id/quarter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="@string/quarter2"
            android:textSize="32sp"
            android:layout_marginTop="10dp"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/player_group">
                <RadioButton
                    android:id="@+id/chose_player_button1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:button="@null"
                    android:background="@drawable/round_button_1"
                    android:gravity="center"
                    android:text="@string/player1" />

                <RadioButton
                    android:id="@+id/chose_player_button2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:button="@null"
                    android:background="@drawable/round_button_1"
                    android:gravity="center"
                    android:text="@string/player2" />

                <RadioButton
                    android:id="@+id/chose_player_button3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:button="@null"
                    android:background="@drawable/round_button_1"
                    android:gravity="center"
                    android:text="@string/player3" />

                <RadioButton
                    android:id="@+id/chose_player_button4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:button="@null"
                    android:background="@drawable/round_button_1"
                    android:gravity="center"
                    android:text="@string/player4" />

                <RadioButton
                    android:id="@+id/chose_player_button5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:button="@null"
                    android:background="@drawable/round_button_1"
                    android:gravity="center"
                    android:text="@string/player5" />
            </RadioGroup>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/action_group">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/add_stat1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="20dp"
                        android:maxLines="2"
                        android:text="@string/action1" />
                    <RadioButton
                        android:id="@+id/add_stat2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/action2"
                        android:padding="20dp"
                        android:layout_margin="10dp"
                        android:maxLines="2"/>
                    <RadioButton
                        android:id="@+id/add_stat3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/action3"
                        android:padding="20dp"
                        android:layout_margin="10dp"
                        android:maxLines="2"/>

                    <RadioButton
                        android:id="@+id/add_stat4"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/action4"
                        android:padding="20dp"
                        android:layout_margin="10dp"
                        android:maxLines="2"/>
                    <RadioButton
                        android:id="@+id/add_stat5"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/action5"
                        android:padding="20dp"
                        android:layout_margin="10dp"
                        android:maxLines="2"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/add_stat6"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/action6"
                        android:padding="20dp"
                        android:layout_margin="10dp"
                        android:maxLines="2"/>

                    <RadioButton
                        android:id="@+id/add_stat7"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="@string/action9"
                        android:layout_margin="10dp"
                        android:maxLines="2"/>

                    <RadioButton
                        android:id="@+id/add_stat8"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="@string/action8"
                        android:layout_margin="10dp"
                        android:maxLines="2"/>

                    <RadioButton
                        android:id="@+id/add_stat9"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="@string/action10"
                        android:layout_margin="10dp"
                        android:maxLines="2"/>

                    <RadioButton
                        android:id="@+id/add_stat10"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="@string/action7"
                        android:layout_margin="10dp"
                        android:maxLines="2"/>
                </LinearLayout>
            </RadioGroup>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit_chose_player"
            android:text="Submit"
            android:layout_gravity="center"
            android:textSize="40sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stats"
                android:textSize="40sp"
                android:layout_gravity="start"
                />

            <Button
                android:id="@+id/viewAction_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actions"
                android:textSize="40sp"
                android:layout_gravity="end"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>